<!-- include header -->
<%- include('includes/_header') %>
    <!-- /include header -->

    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="filter">
                    <a href="/admin_dashboard"><i class="fas fa-angle-double-left"></i> Back to dashboard</a>
                </div>
            </div>
            <div class="form-title text-center">
                <h2 class="text-dark">Update Blog</h2>
                <span class="text-light">Use the below form to Update a Blog</span>
            </div>

            <!-- add user form -->
            <!-- form handling -->
            <form method="POST" id="update_user">
                <div class="new_user">
                    <div class="form-group">
                        <label for="name" class="text-light">Title</label>
                        <input type="hidden" name="id" value="<%= user._id %>">
                        <input type="text" name="title" value="<%= user.title %>" placeholder="Mark Stoenis">
                    </div>
                    <div class="form-group">
                        <label for="Email" class="text-light">Tagline</label>
                        <input type="text" name="tagline" value="<%= user.tagline%>" placeholder="example@gmail.com">
                    </div>
                    <div class="form-group">
                        <label for="Email" class="text-light">Date</label>
                        <input type="text" name="date" value="<%= user.date%>" placeholder="tagline of your blog">
                    </div>
                    <div class="form-group">
                        <label for="paragraph-1" class="text-light">Paragraph-1</label>
                        <textarea name="paragraph_1" id="paragraph-1" cols="30" rows="10"><%= user.paragraph_1%></textarea>
                    </div>

                    <div class="form-group">
                        <label for="paragraph-2" class="text-light">Paragraph-2</label>
                        <textarea name="paragraph_2" id="paragraph-2" cols="30" rows="10"><%= user.paragraph_2%></textarea>
                    </div>

                    <div class="form-group">
                        <label for="paragraph-3" class="text-light">Paragraph-3</label>
                        <textarea name="paragraph_3" id="paragraph-3" cols="30" rows="10"><%= user.paragraph_3%></textarea>
                    </div>



                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Save</button>
                    </div>

                </div>
            </form>

        </div>
    </main>
    <!-- /Main Site -->

    <!-- include footer -->
    <%- include('includes/_footer') %>
        <!-- /include footer -->